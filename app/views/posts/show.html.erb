<div class="container">
  <h2><%= @post.title %></h2>
  <p><%= @post.content %></p>

  <div>
    <p>likes: <%= @post.reviews.where(rating: 1).count %>
    dislikes: <%= @post.reviews.where(rating: 0).count %></p>
  </div>


  <h5>comments:</h5>
  <% @post.comments.each do |comment| %>
    <div class="card">
      <h5><%= comment.user.profile.name.capitalize %></h5>
      <p><%= comment.content %></p>

    </div>
  <% end %>

</div>


