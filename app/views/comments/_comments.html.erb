    <div class="comments d-flex justify-content-start">
      <div class="profile-pic">
        <%= render "posts/avatar", post: comment %>
      </div>

      <div class="ballon">
        <%= link_to profile_path(comment.user.profile.id), class: "post-content" do %>
          <h5><%= comment.user.profile.name.nil? ? "" : comment.user.profile.name.capitalize %></h5>
        <% end %>
        <p><%= comment.content %></p>
      </div>

    </div>
