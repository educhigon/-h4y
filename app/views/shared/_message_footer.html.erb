
<footer class="message-footer">
  <div class="message-input-container">
    <form action="/posts/<%= params[:post_id] %>/comments" method="post" class="message-input-box">
      <input type="text" name="comment[content]" placeholder="Type a Comment ..." class="message-input">
      <button class="send-button">
        <%= svg_icon('Send', class: 'icon') %>
      </button>
    </form>
  </div>
</footer>
