<div class="header flex-row">
  <div class="left">
    <% if request.env['PATH_INFO'] == "/" %>

      <%= link_to profile_path(current_user.profile.id), class: "flex-row justify-content-between align-items-center" do %>
        <%= render "shared/avatar_header" %>
        <p> <%= current_user.profile.name.capitalize %> </p>
      <% end %>
    <% else %>
      <div class="arrow">
        <%= link_to request.referrer do %>
          <%= svg_icon('Arrow - Left', class: 'custom-class') %>
        <% end %>
      </div>
    <% end %>
  </div>
  <!-- careful with how the urls are named -->
  <div class="middle">
    <% if  ["/my_favorites", "/my_posts", "/posts/search", "/posts/new", "/profiles", "/health_data/new"].include?(request.env['PATH_INFO']) %>
      <% case request.env['PATH_INFO'] %>
      <% when "/my_favorites" then %>
        <p> Saved </p>
      <% when "/my_posts" then %>
        <p> My Posts </p>
      <% when "/posts/new" then %>
        <p> Create Post </p>
      <% when "/profiles" then %>
        <p> Profile </p>
      <% when "/health_data/new" then %>
        <p> Survey </p>
      <% end %>
    <% end %>
  </div>

  <div class="right flex-row">
    <% if request.env['PATH_INFO'] == "/messages" %>
      <%= link_to "#" do %>
        <%= svg_icon('Search', class: 'custom-class') %>
      <% end %>
    <% elsif request.env['PATH_INFO'] == "/search" %>
      <%= link_to searches_path do %>
        <%= svg_icon('Message - 5', class: 'custom-class') %>
      <% end %>
    <% else %>
      <%= link_to searches_path do %>
        <%= svg_icon('Search', class: 'custom-class') %>
      <% end %>
      <%= link_to "#" do %>
        <%= svg_icon('Message - 5', class: 'custom-class') %>
      <% end %>
    <% end %>
  </div>
</div>
